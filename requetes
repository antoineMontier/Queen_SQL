--album list
SELECT album_nom from P04_Album;

--album list where name contains'Queen' or 'Live'
SELECT album_nom FROM P04_Album WHERE album_nom LIKE '%Queen%' OR album_nom LIKE '%Live%';

--album list between 1975 and 1982
SELECT album_nom from P04_Album WHERE album_annee BETWEEN 1975 AND 1982;

--album number
SELECT COUNT(*) AS nombre_album FROM P04_Album;

--guitarists of albums between 1984 and 1991
SELECT artiste_nom FROM P04_Artist WHERE artiste_id IN (SELECT artiste_id FROM P04_Participe WHERE instrument LIKE '%guitare%' AND album_id IN (SELECT album_id FROM P04_Album WHERE album_annee BETWEEN 1984 AND 1991));

--bassist of album 'Flash Gordon'
SELECT artiste_nom FROM P04_Artist WHERE artiste_id IN (SELECT artiste_id FROM P04_Participe WHERE instrument LIKE '%basse%' AND album_id IN (SELECT album_id FROM P04_Album WHERE album_nom LIKE 'Flash Gordon'));

--album titles where 'Roger Taylor' is singing
SELECT album_nom FROM P04_Album WHERE album_id IN (SELECT album_id FROM P04_Participe WHERE artiste_id IN (SELECT artiste_id FROM P04_Artiste WHERE artiste_nom LIKE 'Taylor'));

--musician list that participate in an album between 1981 and 1988
SELECT artiste_nom FROM P04_Artiste WHERE artiste_id IN (SELECT artiste_id FROM P04_Participe WHERE album_id IN (SELECT album_id FROM P04_Album WHERE album_annee BETWEEN 1981 AND 1988));